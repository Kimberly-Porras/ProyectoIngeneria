<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RecuperarContraseniaController">
   <children>
      <VBox layoutX="10.0" layoutY="18.0" prefHeight="400.0" prefWidth="600.0" spacing="50.0">
         <children>
            <HBox alignment="CENTER" prefHeight="133.33" prefWidth="200.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <TextField fx:id="tf_password" alignment="CENTER" editable="false" prefHeight="74.0" prefWidth="283.0" promptText="Ingrese su nueva contrasenia" />
                        <TextField fx:id="tf_code" alignment="CENTER" editable="false" prefHeight="74.0" prefWidth="258.0" promptText="Inserta el código que recibiste en tu correo" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="133.33" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="134.0" prefWidth="303.0" spacing="5.0">
                     <children>
                        <TextField fx:id="tf_correo" alignment="CENTER" prefHeight="74.0" prefWidth="258.0" promptText="Ingrese su correo electronico" />
                        <Button fx:id="btn_sendCode" mnemonicParsing="false" onAction="#onSendCode" text="Enviar código de seguridad">
                           <padding>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="134.0" prefWidth="286.0">
                     <children>
                        <Button fx:id="btn_save" disable="true" mnemonicParsing="false" onAction="#onSave" text="Cambiar contraseña">
                           <padding>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
