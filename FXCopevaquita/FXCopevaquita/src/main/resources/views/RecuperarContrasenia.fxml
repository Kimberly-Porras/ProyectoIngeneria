<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RecuperarContraseniaController">
   <children>
      <VBox prefHeight="418.0" prefWidth="610.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER" prefHeight="52.0" prefWidth="610.0" style="-fx-background-color: #00695C;">
               <children>
                  <Label text="Recuperación de contraseña" textFill="WHITE">
                     <font>
                        <Font name="Lucida Bright Demibold Italic" size="23.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="133.33" prefWidth="200.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="134.0" prefWidth="345.0" spacing="10.0">
                     <children>
                        <Label text="Ingresa tu correo electrónico">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tf_correo" alignment="CENTER" prefHeight="35.0" prefWidth="283.0" style="-fx-border-color: grey;">
                           <font>
                              <Font size="15.0" />
                           </font></TextField>
                        <Button fx:id="btn_sendCode" mnemonicParsing="false" onAction="#onSendCode" style="-fx-background-color: #0077b5;" text="Enviar código" textFill="WHITE">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="133.33" prefWidth="200.0">
               <children>
                  <VBox prefHeight="134.0" prefWidth="337.0" spacing="10.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="19.0" prefWidth="338.0" text="Ingresa tu nueva contraseña">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tf_password" alignment="CENTER" editable="false" prefHeight="35.0" prefWidth="283.0" style="-fx-border-color: grey;">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font></TextField>
                        <Label alignment="CENTER" prefHeight="21.0" prefWidth="336.0" text="Inserta el código que recibiste en tu correo">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tf_code" alignment="CENTER" editable="false" prefHeight="35.0" prefWidth="258.0" style="-fx-border-color: grey;">
                           <font>
                              <Font name="Lucida Bright" size="15.0" />
                           </font></TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="49.0" prefWidth="600.0">
               <children>
                  <Button fx:id="btn_save" disable="true" mnemonicParsing="false" onAction="#onSave" style="-fx-background-color: #ff7676;" text="Cambiar contraseña" textFill="WHITE">
                     <font>
                        <Font name="Lucida Bright" size="15.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
